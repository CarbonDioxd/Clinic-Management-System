<Window x:Class="Clinic_Management_System.ClinicVisits"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Clinic_Management_System"
        mc:Ignorable="d"
        Title="ClinicVisits" Height="424" Width="743" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" SizeToContent="WidthAndHeight">
    <Window.Resources>
        <ControlTemplate x:Key="TextBoxBaseControlTemplate" TargetType="{x:Type TextBoxBase}">
            <Border Background="{TemplateBinding Background}" 
        x:Name="Bd" BorderBrush="Gray"
        BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                <ScrollViewer x:Name="PART_ContentHost"/>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" TargetName="Bd"/>
                    <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
                </Trigger>
                <Trigger Property="Width" Value="Auto">
                    <Setter Property="MinWidth" Value="100"/>
                </Trigger>
                <Trigger Property="Height" Value="Auto">
                    <Setter Property="MinHeight" Value="20"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <Style x:Key="RoundedButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="15" Background="#FFEBBC38" BorderThickness="1" Padding="2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Background="#FF582723">
        <Rectangle RadiusX="5" RadiusY="5" HorizontalAlignment="Center" Height="323" Width="700" VerticalAlignment="Top" Fill="White" Opacity="0.8" Margin="0,61,0,0"/>
        <Image HorizontalAlignment="Left" Height="277" VerticalAlignment="Top" Width="282" Source="/Resource-Logo.png" Margin="66,79,0,0" Opacity="0.1" RenderTransformOrigin="0.251,0.488"/>
        <ComboBox x:Name="cbPatients" HorizontalAlignment="Left" Margin="45,115,0,0" VerticalAlignment="Top" Width="320" Height="29" FontSize="16" SelectionChanged="cbPatients_SelectionChanged"/>
        <Button  Style="{StaticResource RoundedButtonStyle}" x:Name="btnBack" Content="Back" HorizontalAlignment="Left" Margin="640,27,0,0" VerticalAlignment="Top" Width="82" Click="btnBack_Click" Height="25" Background="#FFEBBC38" FontWeight="Normal"/>
        <Label Content="Patient Name" HorizontalAlignment="Left" Margin="45,79,0,0" VerticalAlignment="Top" Foreground="Black" FontSize="16"/>
        <Label Content="Clinic Visit Log" HorizontalAlignment="Left" Margin="24,12,0,0" VerticalAlignment="Top" FontSize="25" Foreground="White" FontWeight="Bold"/>
        <ComboBox x:Name="cbNurses" HorizontalAlignment="Left" Margin="45,185,0,0" VerticalAlignment="Top" Width="320" Height="29" FontSize="16"/>
        <Label Content="Medical Attendant" HorizontalAlignment="Left" Margin="45,149,0,0" VerticalAlignment="Top" Foreground="Black" FontSize="16"/>
        <ListBox x:Name="patientDeetsLB" Margin="420,115,0,0" Height="248" VerticalAlignment="Top" HorizontalAlignment="Left" Width="278" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
        <Button  Style="{StaticResource RoundedButtonStyle}" x:Name="timeinbtn" Content="Time In" HorizontalAlignment="Left" VerticalAlignment="Top" Width="320" Height="45" Margin="45,318,0,0" Background="#FFEBBC38" FontWeight="Bold" Click="timeinbtn_Click" FontSize="16"/>
        <Label Content="Patient Details" HorizontalAlignment="Left" Margin="420,79,0,0" VerticalAlignment="Top" Foreground="Black" FontSize="16"/>
        <Rectangle HorizontalAlignment="Left" Height="9" Margin="733,399,0,0" Stroke="#FF582723" VerticalAlignment="Top" Width="10"/>
    </Grid>
</Window>
